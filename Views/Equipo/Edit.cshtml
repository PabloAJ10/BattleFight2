@model BattleFight.Models.Equipo

@{
    ViewData["Title"] = "EquipoActualizar";
}
<head>
    <link rel="stylesheet" href="@(Url.Content("~/css/edit.css"))" />
</head>

<script>
    function confirmarActualizar() {
        return confirm("¿Está seguro de actualizar este equipo?");
    }
</script>

<h1>Actualizar Equipo</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="group">
                <input type="text" asp-for="EquipoId" class="input" id="EquipoId" readonly />
                <label for="EquipoId" class="fixed-label">Equipo ID</label>
                <span asp-validation-for="EquipoId" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <input type="text" class="input" id="NombreEquipo" asp-for="NombreEquipo" required />
                <label for="NombreEquipo">Nombre del Equipo</label>
                <span asp-validation-for="NombreEquipo" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <input type="text" class="input" id="Alias1" asp-for="Alias1" required />
                <label for="Alias1">Alias 1</label>
                <span asp-validation-for="Alias1" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <input type="text" class="input" id="Alias2" asp-for="Alias2" required />
                <label for="Alias2">Alias 2</label>
                <span asp-validation-for="Alias2" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <input type="text" class="input" id="Alias3" asp-for="Alias3" required />
                <label for="Alias3">Alias 3</label>
                <span asp-validation-for="Alias3" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <input type="text" class="input" id="Alias4" asp-for="Alias4" required />
                <label for="Alias4">Alias 4</label>
                <span asp-validation-for="Alias4" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <select class="input" id="Puntaje" asp-for="Puntaje">
                    @for (int i = 1; i <= 100; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <label for="Puntaje">Puntaje</label>
                <span asp-validation-for="Puntaje" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <select class="input" id="Categoria" asp-for="Categoria">
                    <option value="Beginner">Beginner</option>
                    <option value="Middle">Middle</option>
                    <option value="Expert">Expert</option>
                </select>
                <label for="Categoria">Categoría</label>
                <span asp-validation-for="Categoria" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div>
                <button class="custom-save-button" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 1024 1024"
                         width="25px"
                         height="25px"
                         fill="#ffffff">
                        <!-- Ícono de nube -->
                        <path d="M788 402c-52.8 0-98.5 25.9-126.6 65.7-23.2-42.1-67.3-71.7-118.4-71.7-75.4 0-136.8 55.4-136.8 123.1 0 2.3 0.1 4.5 0.3 6.7-90.6 8.3-161.3 79.2-161.3 170.3 0 94.1 76.7 170.7 171.1 170.7h439.2c94.4 0 171.1-76.6 171.1-170.7 0-94.5-76.7-170.7-171.1-170.7-16.9 0-33.2 2.5-48.5 7.1-28.4-59.5-86.3-101.3-153.8-101.3z" />
                    </svg>
                    <span>Guardar</span>
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <button class="custom-button" type="button" onclick="window.location='@Url.Action("Index", "Equipo")';">
        <div class="button-icon">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 1024 1024"
                 height="25px"
                 width="25px"
                 class="icon">
                <path d="M224 480h640a32 32 0 1 1 0 64H224a32 32 0 0 1 0-64z"
                      fill="#ffffff"></path>
                <path d="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z"
                      fill="#ffffff"></path>
            </svg>
        </div>
        <p>Regresar </p>
    </button>
</div>
