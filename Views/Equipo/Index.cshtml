@model IEnumerable<BattleFight.Models.Equipo>

@{
    ViewData["Title"] = "Equipos";
}

<h2>Lista de equipos</h2>


<form asp-action="Index">
    <div class="form-group">
        <label class="control-label"> Buscar equipos</label>
        <input name="Categoria" class="form-control" placeholder="Ingrese categoría (Beginner, Middle, Expert)" />

    </div>
    <div class="from-group">
        <input type="submit" value=" Buscar" class="btn btn-primary" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Mostrar Todos</a>
    </div>
    
</form>

<p>
    <a asp-action="Create">Agregar equipo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EquipoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEquipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoEquipo)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEquipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoEquipo)
            </td>
            <td>
                  
             <td>
                <a href="@Url.Action("Edit", "Equipo", new { equipoid = item.EquipoId })" class="btn btn-warning">Actualizar</a>
            </td>

                    
                   
            </td>
        </tr>
}
    </tbody>
</table>
