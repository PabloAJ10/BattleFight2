<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BattleFight</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BattleFight.styles.css" asp-append-version="true" />
</head>


<div class="container">
    <!-- Agregar la imagen aquí -->
    <img src="~/images/header.jpg" alt="Logo" class="img-fluid" style="width: 100000px; height: auto;" />
</div>

<body>
    <header>
        <nav id="menu" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="nav-link battlefight-link" asp-area="" asp-controller="Home" asp-action="Index">BattleFight</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link button" asp-area="" asp-controller="Usuario" asp-action="Index"><span>Usuario</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link button" asp-area="" asp-controller="Equipo" asp-action="Index"><span>Equipo</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link button" asp-area="" asp-controller="Torneo" asp-action="Index"><span>Torneo</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link button" asp-area="" asp-controller="Home" asp-action="Acerca"><span>Acerca de</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark button-salir" asp-area="" asp-controller="Usuario" asp-action="Login">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6.5 1a.5.5 0 0 1 .5.5v5.793l3.146-3.147a.5.5 0 0 1 .708.708L7.707 8l2.647 2.646a.5.5 0 0 1-.708.708L7 8.707V14.5a.5.5 0 0 1-1 0v-13a.5.5 0 0 1 .5-.5z" />
                                    <path fill-rule="evenodd" d="M13 8a.5.5 0 0 1-.5.5H2a.5.5 0 0 1 0-1h10.5a.5.5 0 0 1 .5.5z" />
                                </svg>
                                <span>Salir</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BattleFight
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
