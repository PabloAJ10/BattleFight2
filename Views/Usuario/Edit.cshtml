@model BattleFight.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="stylesheet" href="@(Url.Content("~/css/edit.css"))" />
</head>

<script>
    function confirmarActualizar() {
        return confirm("¿Está seguro de actualizar este usuario?");
    }
</script>


<h1>Actualizar datos</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="group">
                <input asp-for="Id" class="input" readonly />
                <label asp-for="Id" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="group">
                <input asp-for="Nombre" class="input" />
                <label asp-for="Nombre" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="group">
                <input asp-for="Cedula" class="input" readonly />
                <label asp-for="Cedula" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <div class="group">
                <select asp-for="Genero" class="input" required>
                    <option value="">Seleccione un género</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
                <label asp-for="Genero" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="group">
                <select asp-for="Estado" class="input" required>
                    <option value="">Seleccione un estado</option>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <label asp-for="Estado" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="group">
                <input asp-for="User" class="input" />
                <label asp-for="User" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>

            <div class="group">
                <input asp-for="Pass" type="password" class="input" required />
                <label asp-for="Pass" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>

            <div class="group">
                <input asp-for="ConfirmPassword" type="password" class="input" required />
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <div class="bar"></div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            <div>
                <button class="custom-save-button" type="submit" onclick="return confirmarActualizar();">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 1024 1024"
                         width="25px"
                         height="25px"
                         fill="#ffffff">
                        <!-- Ícono de nube -->
                        <path d="M788 402c-52.8 0-98.5 25.9-126.6 65.7-23.2-42.1-67.3-71.7-118.4-71.7-75.4 0-136.8 55.4-136.8 123.1 0 2.3 0.1 4.5 0.3 6.7-90.6 8.3-161.3 79.2-161.3 170.3 0 94.1 76.7 170.7 171.1 170.7h439.2c94.4 0 171.1-76.6 171.1-170.7 0-94.5-76.7-170.7-171.1-170.7-16.9 0-33.2 2.5-48.5 7.1-28.4-59.5-86.3-101.3-153.8-101.3z" />
                    </svg>
                    <span>Guardar</span>
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <button class="custom-button" type="button" onclick="window.location='@Url.Action("Index", "Torneo")';">
        <div class="button-icon">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 1024 1024"
                 height="25px"
                 width="25px"
                 class="icon">
                <path d="M224 480h640a32 32 0 1 1 0 64H224a32 32 0 0 1 0-64z"
                      fill="#ffffff"></path>
                <path d="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z"
                      fill="#ffffff"></path>
            </svg>
        </div>
        <p>Regresar </p>
    </button>
</div>

