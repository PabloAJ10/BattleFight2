@model BattleFight.Models.Usuario

@{
    ViewData["Title"] = "Inicio de sesión";
}
<head>
    <link rel="stylesheet" href="@(Url.Content("~/css/login.css"))" />
</head>
<script>
    var menu = document.getElementById("menu");
    menu.style.display = "none";
</script>


<hr />
<div class="row">
    <div class="col-md-4">
        <h1>Iniciar sesión</h1>
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>

        }
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="group">
                <input asp-for="User" name="user" class="input" type="text" required />
                <label asp-for="User">Usuario</label>
                <span asp-validation-for="User" class="text-danger"></span>
                <div class="bar"></div>
            </div>

            <div class="group">
                <input asp-for="Pass" name="pass" class="input" type="password" required />
                <label asp-for="Pass">Contraseña</label>
                <span asp-validation-for="Pass" class="text-danger"></span>
                <div class="bar"></div>
            </div>
            <div class="form-group">
                <button type="submit" class="button">Ingresar</button>
            </div>

        </form>
    </div>
</div>

<div>
    <p>Aún no estas registrado?  </p>
             <p> <a asp-action="Create"> Registrarse  </a></p>
</div>


